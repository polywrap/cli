{
  "name": "@polywrap/test-env-js",
  "description": "Polywrap Test Helpers",
  "version": "0.10.0-pre.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polywrap/monorepo.git"
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "yarn build:fast && yarn build:snippets && yarn build:readme",
    "build:fast": "rimraf ./build && tsc --project tsconfig.build.json && yarn copy:wrappers",
    "lint": "eslint --color -c ../../../.eslintrc.js src/",
    "copy:wrappers": "copyfiles ./src/wrappers/**/**/* ./build/wrappers/ -u 2",
    "build:snippets": "tsc --project ./examples/tsconfig.examples.json",
    "build:readme": "yarn doc-snippets combine"
  },
  "dependencies": {
    "@polywrap/cli-js": "0.10.0-pre.7",
    "@polywrap/core-js": "0.10.0-pre.7",
    "@polywrap/polywrap-manifest-types-js": "0.10.0-pre.7",
    "axios": "0.21.2",
    "yaml": "2.1.3"
  },
  "devDependencies": {
    "doc-snippets": "^1.0.0",
    "copyfiles": "2.4.1",
    "rimraf": "3.0.2",
    "ts-node": "8.10.2",
    "typescript": "4.1.6"
  },
  "gitHead": "7346adaf5adb7e6bbb70d9247583e995650d390a",
  "publishConfig": {
    "access": "public"
  },
  "doc-snippets": {
    "extract": {
      "include": [
        "./src/**/*.{ts,tsx,json,yaml,txt,md,graphql,cue}",
        "./examples/**/*.{ts,tsx,json,yaml,txt,md,graphql,cue}"
      ],
      "ignore": [
        "./**/node_modules/**",
        "./**/.polywrap/**",
        "./**/__tests__/**"
      ],
      "dir": "./"
    },
    "inject": {
      "dir": "./readme",
      "include": "./README.md"
    },
    "startTokens": [
      {
        "pattern": "$start: ",
        "inline": false
      },
      {
        "pattern": "/* $: {SNIPPET_NAME} */",
        "inline": true
      }
    ],
    "endTokens": [
      {
        "pattern": "$end",
        "inline": false
      },
      {
        "pattern": "/* $ */",
        "inline": true
      }
    ],
    "outputDir": "./"
  }
}
