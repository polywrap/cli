{
  "id": "MetaManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "name"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "name": {
      "type": "string"
    },
    "subtext": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": "string",
      "format": "websiteUrl"
    },
    "icon": {
      "type": "string",
      "format": "imageFile"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string",
            "format": "imageFile"
          },
          "url": {
            "type": "string",
            "format": "websiteUrl"
          }
        },
        "required": [
          "name",
          "url"
        ]
      }
    },
    "queries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "query": {
            "type": "string",
            "format": "graphqlFile"
          },
          "vars": {
            "type": "string",
            "format": "jsonFile"
          }
        },
        "required": [
          "name",
          "query"
        ]
      }
    }
  }
}
